<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:batch="http://www.springframework.org/schema/batch"
	   xmlns:task="http://www.springframework.org/schema/task"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/batch
	                       http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		                   http://www.springframework.org/schema/beans
		                   http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<batch:job id="reportJob">
		<batch:step id="load-csv" next="computations">
			<batch:tasklet>
				<batch:chunk reader="csvFileItemReader" writer="mysqlItemWriter"
					commit-interval="2">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
		<batch:split id="computations" task-executor="taskExecutor" next="write-files">
			<batch:flow>
				<batch:step id="computation1">
					<tasklet ref="computation1Tasklet"/>
				</batch:step>
			</batch:flow>
			<batch:flow>
				<batch:step id="computation2">
					<tasklet ref="computation2Tasklet"/>
				</batch:step>
			</batch:flow>
		</batch:split>
		<batch:step id="write-files">
			<batch:tasklet ref="writeFilesTasklet"/>
		</batch:step>
	</batch:job>

    <bean id="report" class="com.sqli.model.Report" scope="prototype" />
    
    <bean id="taskExecutor" class="org.springframework.core.task.SimpleAsyncTaskExecutor" />
    
	<bean id="csvFileItemReader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource" value="classpath:csv/report.csv" />
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" value="date,impressions,clicks,earning" />
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
						<property name="prototypeBeanName" value="report" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="mysqlItemWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
		<property name="dataSource" ref="dataSource" />
		<property name="sql">
			<value>
            <![CDATA[        
            	insert into RAW_REPORT(DATE,IMPRESSIONS,CLICKS,EARNING) values (:date, :impressions, :clicks, :earning)
            ]]>
			</value>
		</property>
		<property name="itemSqlParameterSourceProvider">
			<bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
		</property>
	</bean>
	
	<bean id="computation1Tasklet" class="com.sqli.tasklet.Computation1Tasklet" />

	<bean id="computation2Tasklet" class="com.sqli.tasklet.Computation2Tasklet" />

	<bean id="writeFilesTasklet" class="com.sqli.tasklet.WriteFilesTasklet" />

</beans>
